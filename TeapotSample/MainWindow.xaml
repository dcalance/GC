<Window x:Class="Example1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Teapot Sample" Height="400" Width="600"
        xmlns:sharpGL="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF" Icon="/TeapotSample;component/SharpGL.ico">
    <Grid>
        <sharpGL:OpenGLControl 
            OpenGLDraw="OpenGLControl_OpenGLDraw" OpenGLInitialized="OpenGLControl_OpenGLInitialized"
            RenderContextType="FBO" Margin="66,0,0,0" />
        <Canvas Name= "ButtonsPanel" HorizontalAlignment="Left" Height="369" VerticalAlignment="Top" Width="66">
            <Button x:Name="button" Content="Button" Width="66" Click="button_Click"/>
        </Canvas>
    </Grid>
</Window>
