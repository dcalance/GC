<Window x:Class="Example1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Teapot Sample" Height="400" Width="600"
        xmlns:sharpGL="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF" Icon="/TeapotSample;component/SharpGL.ico">
    <Grid>
        <sharpGL:OpenGLControl 
            OpenGLDraw="OpenGLControl_OpenGLDraw" OpenGLInitialized="OpenGLControl_OpenGLInitialized"
            RenderContextType="FBO" Margin="47,0,0,0" />
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="47" Height="19" Click="button_Click"/>
        <Button x:Name="button1" Content="Button" HorizontalAlignment="Left" Margin="0,19,0,0" VerticalAlignment="Top" Width="47" Height="25" Click="button1_Click"/>
    </Grid>
</Window>
